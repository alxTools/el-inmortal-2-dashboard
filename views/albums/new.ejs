<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container" style="padding-top: 40px; max-width: 700px;">
        <h1 style="color: #ffd700; margin-bottom: 30px;">游 Crear Nuevo 츼lbum</h1>

        <div class="section">
            <form id="albumForm">
                <div class="form-group">
                    <label>Nombre del 츼lbum *</label>
                    <input type="text" name="name" id="albumName" required placeholder="Ej: El Inmortal 3">
                </div>

                <div class="form-group">
                    <label>Artista *</label>
                    <input type="text" name="artist" id="albumArtist" required placeholder="Ej: Galante el Emperador">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Fecha de Lanzamiento</label>
                        <input type="date" name="release_date" id="albumReleaseDate">
                    </div>
                    <div class="form-group">
                        <label>Estado</label>
                        <select name="status" id="albumStatus">
                            <option value="upcoming">Pr칩ximamente</option>
                            <option value="draft">Borrador</option>
                            <option value="released">Lanzado</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label>Descripci칩n</label>
                    <textarea name="description" id="albumDescription" rows="3" placeholder="Descripci칩n del 치lbum..."></textarea>
                </div>

                <div style="display: flex; gap: 15px; margin-top: 30px;">
                    <button type="submit" class="btn">游 Crear 츼lbum</button>
                    <a href="/albums" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        document.getElementById('albumForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = {
                name: document.getElementById('albumName').value,
                artist: document.getElementById('albumArtist').value,
                release_date: document.getElementById('albumReleaseDate').value,
                status: document.getElementById('albumStatus').value,
                description: document.getElementById('albumDescription').value
            };
            
            try {
                const response = await fetch('/albums', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    window.location.href = '/albums';
                } else {
                    alert('Error: ' + (result.error || 'Error al crear 치lbum'));
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error creando 치lbum');
            }
        });
    </script>
</body>
</html>
