<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        .splitsheet-preview {
            background: #fff;
            color: #000;
            padding: 40px;
            border-radius: 10px;
            margin-top: 20px;
        }
        .splitsheet-preview h2 {
            color: #000;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
        }
        .splitsheet-preview .field {
            margin-bottom: 15px;
            padding: 10px;
            background: #f5f5f5;
            border: 1px solid #ddd;
        }
        .splitsheet-preview .field-label {
            font-weight: bold;
            font-size: 0.9em;
            color: #666;
        }
        .splitsheet-preview .field-value {
            font-size: 1.1em;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container" style="padding-top: 40px;">
        <h1 style="color: #ffd700; margin-bottom: 30px;">üìÑ Generar Splitsheet</h1>

        <div class="section">
            <div class="splitsheet-preview">
                <h2 style="text-align: center; margin-bottom: 30px;">SPLIT SHEET AGREEMENT</h2>
                
                <h3 style="margin-bottom: 20px;">üéµ Informaci√≥n de la Obra</h3>
                <div class="field">
                    <div class="field-label">T√≠tulo de la Canci√≥n:</div>
                    <div class="field-value"><%= track.title %></div>
                </div>
                <div class="field">
                    <div class="field-label">Artista:</div>
                    <div class="field-value">Galante el Emperador</div>
                </div>
                <div class="field">
                    <div class="field-label">√Ålbum:</div>
                    <div class="field-value">El Inmortal 2</div>
                </div>
                <div class="field">
                    <div class="field-label">Duraci√≥n:</div>
                    <div class="field-value"><%= track.duration || 'N/A' %></div>
                </div>

                <h3 style="margin: 30px 0 20px;">üë• Partes</h3>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="field">
                        <div class="field-label">PARTE A - Artista:</div>
                        <div class="field-value">Galante el Emperador</div>
                        <div style="margin-top: 10px; font-size: 0.9em;">
                            <strong>Porcentaje:</strong> <%= track.split_percentage ? track.split_percentage.split('/')[0] : '50' %>%
                        </div>
                    </div>
                    <div class="field">
                        <div class="field-label">PARTE B - Productor:</div>
                        <div class="field-value"><%= track.producer_name %></div>
                        <div style="margin-top: 10px; font-size: 0.9em;">
                            <strong>Email:</strong> <%= track.producer_email %>
                        </div>
                        <div style="font-size: 0.9em;">
                            <strong>Porcentaje:</strong> <%= track.split_percentage ? track.split_percentage.split('/')[1] : '50' %>%
                        </div>
                    </div>
                </div>

                <div style="margin-top: 30px; padding: 20px; background: #f0f0f0; border: 2px solid #000;">
                    <h4 style="margin-bottom: 15px;">Divisi√≥n de Regal√≠as:</h4>
                    <p><strong>Artista:</strong> <%= track.split_percentage ? track.split_percentage.split('/')[0] : '50' %>%</p>
                    <p><strong>Productor:</strong> <%= track.split_percentage ? track.split_percentage.split('/')[1] : '50' %>%</p>
                    <p style="margin-top: 10px;"><strong>Total:</strong> 100%</p>
                </div>

                <div style="margin-top: 30px; text-align: center;">
                    <button class="btn" onclick="window.print()" style="background: #000; color: #fff;">üñ®Ô∏è Imprimir / Guardar PDF</button>
                    <button id="sendEmailBtn" class="btn" style="background: #ffd700; color: #1a1a2e; margin-left: 10px;">
                        üìß Enviar por Email
                    </button>
                    <a href="/tracks" class="btn btn-secondary" style="margin-left: 10px;">Volver a Temas</a>
                </div>

                <!-- Email Modal -->
                <div id="emailModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 1000; justify-content: center; align-items: center;">
                    <div style="background: #1a1a2e; padding: 30px; border-radius: 15px; border: 2px solid #ffd700; max-width: 500px; width: 90%;">
                        <h3 style="color: #ffd700; margin-bottom: 20px;">üìß Enviar Splitsheet</h3>
                        <form id="emailForm">
                            <div class="form-group" style="margin-bottom: 15px;">
                                <label style="display: block; color: #888; margin-bottom: 5px;">Email del Productor:</label>
                                <input type="email" id="producerEmail" value="<%= track.producer_email || '' %>" required style="width: 100%; padding: 10px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,215,0,0.5); border-radius: 5px; color: #fff;">
                            </div>
                            <div class="form-group" style="margin-bottom: 15px;">
                                <label style="display: block; color: #888; margin-bottom: 5px;">Email del Artista:</label>
                                <input type="email" id="artistEmail" value="<%= (typeof artistEmail !== 'undefined' && artistEmail) ? artistEmail : 'galante@el-emperador.com' %>" required style="width: 100%; padding: 10px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,215,0,0.5); border-radius: 5px; color: #fff;">
                            </div>
                            <div class="form-group" style="margin-bottom: 20px;">
                                <label style="display: block; color: #888; margin-bottom: 5px;">Mensaje Adicional:</label>
                                <textarea id="emailMessage" rows="3" placeholder="Mensaje opcional para incluir en el email..." style="width: 100%; padding: 10px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,215,0,0.5); border-radius: 5px; color: #fff; resize: vertical;"></textarea>
                            </div>
                            <div style="display: flex; gap: 10px;">
                                <button type="submit" class="btn" style="flex: 1;">üì§ Enviar</button>
                                <button type="button" onclick="closeEmailModal()" class="btn btn-secondary" style="flex: 1;">Cancelar</button>
                            </div>
                        </form>
                        <div id="emailStatus" style="margin-top: 15px; text-align: center; display: none;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Email modal functions
        document.getElementById('sendEmailBtn').addEventListener('click', function() {
            document.getElementById('emailModal').style.display = 'flex';
        });

        function closeEmailModal() {
            document.getElementById('emailModal').style.display = 'none';
            document.getElementById('emailStatus').style.display = 'none';
        }

        // Handle email form submission
        document.getElementById('emailForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const producerEmail = document.getElementById('producerEmail').value;
            const artistEmail = document.getElementById('artistEmail').value;
            const message = document.getElementById('emailMessage').value;
            const statusDiv = document.getElementById('emailStatus');
            
            statusDiv.style.display = 'block';
            statusDiv.innerHTML = '<span style="color: #ffd700;">‚è≥ Enviando emails...</span>';
            
            try {
                const response = await fetch('/splitsheets/<%= track.id %>/send', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        producerEmail,
                        artistEmail,
                        message
                    })
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    statusDiv.innerHTML = '<span style="color: #4ade80;">‚úÖ Emails enviados exitosamente!</span>';
                    setTimeout(() => {
                        closeEmailModal();
                    }, 2000);
                } else {
                    statusDiv.innerHTML = '<span style="color: #ff6b6b;">‚ùå Error: ' + (result.error || 'No se pudieron enviar los emails') + '</span>';
                }
            } catch (error) {
                console.error('Error:', error);
                statusDiv.innerHTML = '<span style="color: #ff6b6b;">‚ùå Error de conexi√≥n</span>';
            }
        });

        // Close modal on outside click
        document.getElementById('emailModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeEmailModal();
            }
        });
    </script>

    <%- include('../partials/footer') %>
</body>
</html>
